package br.edu.up.model;

public class Animal {
	
	public String nome;
	public String genero;
	public String porte;
	private int idade; //1 a 150 uma forma de proteger 
	
	public void setIdade(int IdadeDeFora) throws Exception {
		this.idade =IdadeDeFora;
		if(IdadeDeFora>0 && IdadeDeFora<151) {
			this.idade=IdadeDeFora;
		}else {
		throw new Exception("Idade Inválida");//Vai lançar uma excessao e ja voiu ter que resolver o problema 
		//throw new RuntimeException("Idade Inválida");//só vai ser lançada quando o programa estiver rodando.
	}

	}
}
